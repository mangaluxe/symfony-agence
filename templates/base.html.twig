<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

            <a class="navbar-brand" href="{{path('home')}}">Mon agence</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('property.index_all')}}">Tout sur une page</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('property.index')}}">Biens (pagination)</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('property.index_filtre')}}">Biens (filtre)</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('property.index_pagination_filtre')}}">Biens (pagination et filtre)</a>
                    </li>
                    {% if not app.user %}
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('inscription')}}">Inscription</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('connexion')}}">Connexion</a>
                    </li>
                    {% else %}
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('deconnexion')}}">DÃ©connexion</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('profil')}}">Profil</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{path('admin.property.index')}}">Admin</a>
                    </li>
                    {% endif %}
                </ul>
            </div>

        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

        <div class="footer text-right py-3 bg-dark mt-5">
            <div class="mx-4"><a href="{{ path('admin.property.index') }}">Admin</a></div>
        </div>

        <script src="{{ asset('assets/js/jquery-3.3.1.slim.min') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
   
   </body>
</html>
